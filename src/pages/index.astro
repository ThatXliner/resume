---
import Layout from "../layouts/Layout.astro";
---

<Layout title="My Resume">
  <main class="flex w-full h-screen">
    <div class="flex-1/2 bg-blue-500 w-full">Pic</div>
    <div class="flex-1/2 w-full px-3">
      <p class="text-5xl font-mono">hello.</p>
      <p class="leading-relaxed prose">
        Hello! Welcome to my resume. Here you will find all of my
        qualifications, skills, past experiences, and even my personal story
        <button class="btn btn-primary"
          >See more <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="w-5 h-5"
          >
            <path
              fill-rule="evenodd"
              d="M3 10a.75.75 0 0 1 .75-.75h10.638L10.23 5.29a.75.75 0 1 1 1.04-1.08l5.5 5.25a.75.75 0 0 1 0 1.08l-5.5 5.25a.75.75 0 1 1-1.04-1.08l4.158-3.96H3.75A.75.75 0 0 1 3 10Z"
              clip-rule="evenodd"></path>
          </svg>
        </button>
      </p>
      <h2 class="text-4xl">Skillset</h2>
      <p>
        Hover over every card to view a brief overview of my experience with
        these technologies
      </p>
      <div>
        <h3 class="text-2xl">Languages</h3>
        <div class="flex w-full justify-evenly"></div>
        <h3 class="text-2xl">Frameworks</h3>
        <div class="flex w-full justify-evenly"></div>
        <h3 class="text-2xl">DevOps</h3>
        <div class="flex w-full justify-evenly"></div>
      </div>
      <h2 class="text-4xl">Experiences & Education</h2>
      <div class="divider"></div>
      <div>
        <!-- Socials -->
      </div>
    </div>
  </main>
</Layout>
