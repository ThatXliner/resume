			rgba(82, 119, 210, 1) 25%,
			rgba(20, 131, 232, 1) 50%,
			rgba(82, 119, 210, 1) 75%,
			rgba(65, 89, 217, 1) 100%
		);
	}
	.red-gradient {
		background: rgb(217, 65, 65);
		background: linear-gradient(
			90deg,
			rgba(217, 65, 65, 1) 0%,
			rgba(210, 82, 82, 1) 25%,
			rgba(232, 20, 20, 1) 50%,
			rgba(210, 82, 82, 1) 75%,
			rgba(217, 65, 65, 1) 100%
		);
	}
	.rainbow-gradient {
		background: linear-gradient(
			90deg,
			rgba(255, 0, 0, 1) 0%,
			rgba(255, 154, 0, 1) 10%,
			rgba(208, 222, 33, 1) 20%,
			rgba(79, 220, 74, 1) 30%,
			rgba(63, 218, 216, 1) 40%,
			rgba(47, 201, 226, 1) 50%,
			rgba(28, 127, 238, 1) 60%,
			rgba(95, 21, 242, 1) 70%,
			rgba(186, 12, 248, 1) 80%,
			rgba(251, 7, 217, 1) 90%,
			rgba(255, 0, 0, 1) 100%
		);
	}
	.moving-gradient {
		background-size: 200% 100%; /*Adjust the width as needed*/

		animation: move-gradient 2s linear infinite;
	}

	@keyframes move-gradient {
		0% {
			background-position: -100% 50%;
		}
		100% {
			background-position: 100% 50%;
		}
	}
</style>
