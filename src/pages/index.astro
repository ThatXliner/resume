<script>
	import { gsap } from "gsap";
	const { TextPlugin } = await import("gsap/TextPlugin");
	const { ScrollTrigger } = await import("gsap/ScrollTrigger");
	const { ScrollToPlugin } = await import("gsap/ScrollToPlugin");

	gsap.registerPlugin(TextPlugin, ScrollTrigger, ScrollToPlugin);
	const tl = gsap.timeline();

	tl.from("#intro .hero-content", { scale: 0.5, opacity: 0, duration: 0.5 }) //e
		.to("#intro #hello", {
			duration: 1,
			text: "Hi! I'm Bryan Hu",
			ease: "none",
		});
	tl.to("#intro #bio", {
		duration: 1,
		text: "Short bio",
		ease: "none",
	});
	tl.from(
		"#intro #socials > a",
		{
			stagger: 0.5,
			duration: 1,
			opacity: 0,
		},
		"<"
	);
	gsap.to("main", {
		backgroundColor: "black",
		backgroundImage: "none",

		scrollTrigger: {
			trigger: "#collab",
			end: "top center-=10%",
			scrub: true,
		},
	});
	document.querySelectorAll("#card-fly-right").forEach((element) => {
		gsap.from(element, {
			x: "100vw",
			duration: 1,
			scrollTrigger: {
				trigger: element,
				start: "top center",
			},
		});
	});
	document.querySelectorAll("#card-fly-left").forEach((element) => {
		gsap.from(element, {
			x: "-100vw",
			duration: 1,
			scrollTrigger: {
				trigger: element,
				start: "top center",
			},
		});
	});
	document.querySelectorAll("[data-transition]").forEach((element) =>
		element.addEventListener("click", () => {
			gsap.to(window, {
				duration: 0.5,
				scrollTo: `#${element.dataset.transition}`,
				ease: "power2.inOUt",
				onComplete: () => {
					window.location.hash = `#${element.dataset.transition}`;
				},
			});
		})
	);
</script>
