---
import { Image } from "astro:assets";
import { AnimatedThemeToggler } from "./ui/animated-theme-toggler";
import { TextAnimate } from "./ui/text-animate";
import { LightRays } from "./ui/light-rays";
import me from "../assets/me_stand.png";
---

<div class="h-screen w-full rounded-lg border">
    <div
        class="relative z-10 flex flex-col h-full w-full items-center justify-center gap-4 px-6 text-center"
    >
        <!-- <span
            class="text-xs font-semibold tracking-[0.35em] text-slate-800/60 uppercase dark:text-slate-200/60"
        >
            Ambient glow
        </span> -->
        <div class="flex space-x-3 space-y-3 items-center justify-center">
            <!-- <div class="flex flex-col items-center justify-center space-y-4"> -->
            <h1 class="text-foreground text-4xl font-bold md:text-7xl">
                Hi, I'm Bryan
                <!-- TODO: add underline effect -->
            </h1>
            <!-- </div> -->
            <Image
                src={me}
                alt="A bird sitting on a nest of eggs."
                width="300"
            />
        </div>

        <p
            class="w-full text-9xl text-slate-800/80 md:text-base dark:text-slate-200/80"
        >
            <TextAnimate
                animation="blurIn"
                as="h1"
                client:only
                text={"I'm a full-stack developer, freelance photographer, camera operator, and passionate creator."}
            />
        </p>
    </div>
    <LightRays />
</div>
